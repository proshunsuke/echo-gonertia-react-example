{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "vite/client",
            "@vitest/browser/providers/playwright"
        ],
        "baseUrl": ".",
        "jsx": "react-jsx",
        "paths": {
            "@/*": [
                "resources/js/*"
            ]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}
